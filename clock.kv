# BoxLayout:
#     orientation: 'vertical'

<RobotoButton@Button>:
    background_normal: 'images/button_normal.png'
    background_down: 'images/button_down.png'
    border: (2,2,2,2)

<BoxButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True

<ClockLabel@Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

ClockLayout:
    time_prop: time
    ClockLabel:
        id: time
        text: '00:00:00'



    BoxLayout:
        height: 90
        orientation:'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()


        RobotoButton:
            id: reset
            text: 'Reset'
            # background_normal: 'images/red_button_normal.png'
            # background_down: 'images/red_button_down.png'
            on_press: app.reset()

    ClockLabel:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'
